version: 2

run:
  timeout: 5m
  tests: true
  fix: true
  modules-download-mode: readonly
  allow-parallel-runners: true
  skip-dirs:
    - vendor
  skip-files:
    - ".*\\.gen\\.go$"
    - ".*_mock\\.go$"

issues:
  exclude-use-default: false
  max-issues-per-linter: 0
  max-same-issues: 0
  exclude-rules:
    - path: _test\\.go
      linters:
        - gocyclo
        - goconst
    - path: ".*(\\.gen\\.go|_mock\\.go)$"
      linters:
        - revive
        - gocyclo
        - dupl
        - goconst

linters:
  disable-all: true
  enable:
    - govet
    - staticcheck
    - unused
    - errcheck
    - ineffassign
    - goconst
    - misspell
    - gocyclo
    - revive
    - nolintlint
    - durationcheck
    - copyloopvar
    # - gosec             # 可按需开启安全扫描

formatters:
  enable:
    - gofumpt
    - goimports

linters-settings:
  gocyclo:
    min-complexity: 15
  goconst:
    min-len: 2
    min-occurrences: 3
  misspell:
    locale: US
  revive:
    severity: warning
    rules:
      - name: exported
      - name: if-return
      - name: indent-error-flow
      - name: blank-imports
      - name: receiver-naming
      - name: error-naming
      - name: error-strings
      - name: errorf
      - name: unexported-return
        disabled: true
  nolintlint:
    allow-unused: false
    allow-leading-space: false
    require-explanation: true
    require-specific: true
  gosec:
    excludes:
      - G204
      - G304

formatter-settings:
  gofumpt:
    extra-rules: true
  goimports:
    local-prefixes: {{ .ModulePath }}
