// {{.Pascal}}Param 查询参数
type {{.Pascal}}Param struct {
	Page  int    `json:"page" form:"page" query:"page"`
	Count int    `json:"count" form:"count" query:"count"`
	Name  string `json:"name" form:"name" query:"name"`
	// TODO: 添加更多查询字段
}

// Limit 获取限制数量
func (p {{.Pascal}}Param) Limit() int {
	if p.Count <= 0 {
		return 10
	}
	return p.Count
}

// Offset 获取偏移量
func (p {{.Pascal}}Param) Offset() int {
	if p.Page <= 1 {
		return 0
	}
	return (p.Page - 1) * p.Limit()
}

