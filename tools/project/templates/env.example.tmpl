# 系统配置
SYSTEM_PORT=:8080
SYSTEM_LEVEL=1
SYSTEM_ENV=dev

# MySQL 配置
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=password
MYSQL_DATABASE={{.ProjectName}}
MYSQL_MAX_OPEN_CONNS=100
MYSQL_MAX_IDLE_CONNS=10

# Redis 配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DATABASE=0

# MongoDB 配置
MONGODB_HOST=localhost
MONGODB_PORT=27017
MONGODB_USER=
MONGODB_PASSWORD=
MONGODB_DATABASE={{.ProjectName}}

# Kafka 配置
KAFKA_BROKERS=localhost:9092
KAFKA_CLIENT_ID={{.ProjectName}}
KAFKA_TOPIC={{.ProjectName}}

# JWT 配置
JWT_SECRET=your-secret-key
JWT_EXPIRE=3600
JWT_SKIP_PATHS=/health,/metrics

# 日志配置
LOG_LEVEL=info
LOG_FORMAT=json

# CORS 配置
CORS_ALLOW_ORIGINS=*
CORS_ALLOW_HEADERS=*
CORS_ALLOW_METHODS=GET,POST,PUT,DELETE,OPTIONS
CORS_ALLOW_CREDENTIALS=true

# Casbin 配置
CASBIN_MODEL=configs/rbac_model.conf
CASBIN_MODEL_FILE=configs/rbac_model.conf

# Etcd 配置
ETCD_ENDPOINTS=localhost:2379
ETCD_KEY=/{{.ProjectName}}/config
ETCD_FORMAT=toml
ETCD_USERNAME=
ETCD_PASSWORD=
ETCD_DIAL_TIMEOUT_SECONDS=5

# Consul 配置
CONSUL_ADDRESS=localhost:8500
CONSUL_TOKEN=
CONSUL_KEY={{.ProjectName}}/config
CONSUL_FORMAT=toml
