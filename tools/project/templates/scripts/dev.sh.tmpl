#!/bin/bash

# 开发环境启动脚本

echo "🚀 启动 {{.ProjectName}} 开发环境..."

# 检查Go环境
if ! command -v go &> /dev/null; then
    echo "❌ Go 未安装，请先安装 Go"
    exit 1
fi

# 检查配置文件
if [ ! -f "configs/config.toml" ]; then
    echo "⚠️  配置文件不存在，复制示例配置..."
    cp env.example .env
fi

# 安装依赖
echo "📦 安装依赖..."
go mod tidy

# 运行项目
echo "🏃 启动项目..."
go run . --config=configs/config.toml
